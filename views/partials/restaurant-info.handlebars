<div>
           
           <!-- Start Aviary -->
            <div class="container-fluid">
              <div class="row">
                <!-- Start Carousel -->
                <div class="carousel slide col-md-5" data-ride="carousel">
                  <h2>{{res_name}}</h2>
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img src="/{{format_name res_name}}/{{format_name res_name}}-front.jpg" class="d-block w-100" alt="{{format_name res_name}} Front">
                    </div>
                    <div class="carousel-item imageSize">
                      <img src="/{{format_name res_name}}/{{format_name res_name}}-interior.jpg" class="d-block w-100" alt="{{format_name res_name}} Interior">
                    </div>
                    <div class="carousel-item imageSize">
                      <img src="/{{format_name res_name}}/{{format_name res_name}}-food.jpg" class="d-block w-100" alt="{{format_name res_name}} Food">
                    </div>
                  </div>
                </div>
                <!-- End Carousel -->
                <!-- Start Card -->
                <div class="card border border-secondary col-md-6" id="rightSide" style="width: 25rem;">
                  <div class="card-body">

                    {{#each reviews}}
                    <p class="card-text restaurantReview">"{{ this.review_content }}"
                    </p>
                    {{/each}}

{{!-- No luck yet displaying the user displayName on each review --}}
                  {{!-- <h3>
                    {{#user}}
                    {{#if @first}}
                    {{this.displayName}}
                    {{/if}}
                    {{/user}}</h3> --}}

                  </div>

                  <ul class="list-group list-group-flush restaurantInfo">
                    
                    <li class="list-group-item">Address: {{ res_address}}</li>
                    
                    

                    {{#if brick_mortar }}
                    <li class="list-group-item">Brick and Mortar: Yes</li>
                    {{ else }}
                    <li class="list-group-item">Brick and Mortar: No</li>
                    {{/if}}

                    {{#if trailer }}
                    <li class="list-group-item">Trailer: Yes</li>
                    {{ else }}
                    <li class="list-group-item">Trailer: No</li>
                    {{/if}}

                    {{#if delivery }}
                    <li class="list-group-item">Delivery: Yes</li>
                    {{else}}
                    <li class="list-group-item">Delivery: No</li>
                    {{/if}}

                    {{#if takeout_curbside }}
                    <li class="list-group-item">Takeout/Curbside: Yes</li>
                    {{else}}
                    <li class="list-group-item">Takeout/Curbside: No</li>
                    {{/if}}

                    {{#if reservations }}
                    <li class="list-group-item">Reservations: Yes</li>
                    {{else}}
                    <li class="list-group-item">Reservations: No</li>
                    {{/if}}

                    {{#if on_site_parking }}
                    <li class="list-group-item">Parking: Yes</li>
                    {{else}}
                    <li class="list-group-item">Parking: No</li>
                    {{/if}}

                    <li class="list-group-item">{{format_phone res_phone}}</li>
                  </ul>
                  <div class="card-body restaurantLinks">
                  <div class="card-body">
                    <a href="https://www.google.com"> Silly Bird </a>
                    <a href="https://www.w3schools.com">Visit W3Schools.com!</a>
                    {{!-- <a href="#" class="card-link">Directions</a> --}}
                    {{!-- <button href="#" class="direc-btn card-link"  value="{{res_address}}">Directions</button> --}}
                  </div>
                  </div>
                </div>
                <!-- End Card -->
              </div>
            </div>
            <!-- End Aviary -->
            <br>

</div>
