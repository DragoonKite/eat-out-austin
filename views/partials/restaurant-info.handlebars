           
  <!-- Start Aviary -->
  <div class="container-fluid">
    <div class="row">
      
      <!-- Start Carousel -->
      <div class="carousel slide col-md-5" data-ride="carousel">
        <h2>{{res_name}}</h2>
        {{#if res_approval}}
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/{{format_name res_name}}/{{format_name res_name}}-front.jpg" class="d-block w-100" alt="{{format_name res_name}} Front">
          </div>
          <div class="carousel-item imageSize">
            <img src="/{{format_name res_name}}/{{format_name res_name}}-interior.jpg" class="d-block w-100" alt="{{format_name res_name}} Interior">
          </div>
          <div class="carousel-item imageSize">
            <img src="/{{format_name res_name}}/{{format_name res_name}}-food.jpg" class="d-block w-100" alt="{{format_name res_name}} Food">
          </div>
        </div>
        {{/if}}
      </div>
      <!-- End Carousel -->
      
      <!-- Start Card -->
      <div class="card border border-secondary col-md-6" id="rightSide" style="width: 25rem;">
        <div class="card-body">

        {{#each reviews}}
        <p class="card-text restaurantReview">"{{ this.review_content }}"
        </p>
        {{/each}}

{{!-- No luck yet displaying the user displayName on each review --}}
        {{!-- <h3>
          {{#user}}
          {{#if @first}}
          {{this.displayName}}
          {{/if}}
          {{/user}}</h3> --}}

        </div>

        <ul class="list-group list-group-flush restaurantInfo">
<div class="row">
<div class="col justify-content">
          
          <ul class="list-group-item border-0 list-group-flush">Address: {{ res_address}}</ul>
          
                    

          {{#if trailer }}
          <ul class="list-group-item border-0">Trailer: Yes</ul>
          {{ else }}
          <ul class="list-group-item border-0">Trailer: No</ul>
          {{/if}}

          {{#if delivery }}
          <li class="list-group-item border-0">Delivery: Yes</li>
          {{else}}
          <li class="list-group-item border-0">Delivery: No</li>
          {{/if}}

          {{#if takeout_curbside }}
          <li class="list-group-item border-0">Takeout/Curbside: Yes</li>
          {{else}}
          <li class="list-group-item border-0">Takeout/Curbside: No</li>
          {{/if}}
</div>
<div class="col justify-content">

          {{#if reservations }}
          <li class="list-group-item border-0">Reservations: Yes</li>
          {{else}}
          <li class="list-group-item border-0">Reservations: No</li>
          {{/if}}

          {{#if on_site_parking }}
          <li class="list-group-item border-0">Parking: Yes</li>
          {{else}}
          <li class="list-group-item border-0">Parking: No</li>
          {{/if}}


          <li class="list-group-item border-0">{{format_phone res_phone}}</li>
          <li class="list-group-item border-0"><a href="https://{{ res_website }}" class="card-link" target="_blank"> Visit Restaurant Website </a></li>

        </ul>
