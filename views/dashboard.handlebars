<section class="mt-5 container " style="padding-left: 2%; padding-top: 100px">
    <section>
  <h2>Add New Restaurant</h2>

  <form class="new-restaurant-form mb-5">

      <div class="mb-3">
        <label for="restaurant-name" class="form-label">Name</label>
        <input type="text" class="form-control w-50" id="restaurant-name" name="restaurant-name">
      </div>

      <div class="mb-3">
        <label for="restaurant-phone" class="form-label">Phone #</label>
        <input type="text" class="form-control w-50" id="restaurant-phone" name="restaurant-phone">
      </div>

      <div class="mb-3">
        <label for="restaurant-site" class="form-label">Website</label>
        <input type="text" class="form-control w-50" id="restaurant-site" name="restaurant-site">
      </div>

      <div class="mb-3">
        <label for="restaurant-address" class="form-label">Address</label>
        <input type="text" class="form-control w-50" id="restaurant-address" name="restaurant-address">
      </div>

      <label for="food-style" class="form-label">Food Style</label> <br>
      <select name="food-style" id="food-style" class="custom-select w-50">
        <option value="Farm to Table">Farm to Table</option>
        <option value="Southern American">Southern American</option>
        <option value="Vegeterian & Vegan">Vegeterian &#38; Vegan</option>
        <option value="Asian">Asian</option>
        <option value="TX BBQ">TX BBQ</option>
        <option value="Seafood">Seafood</option>
        <option value="Mexican">Mexican</option>
        <option value="French">French</option>
        <option value="Italian">Italian</option>
        <option value="Indian">Indian</option>
        <option value="Sushi">Sushi</option>
        <option value="Burgers">Burgers</option>
      </select>

     <div class="custom-control custom-radio mt-3">
        <input type="radio" name="a" value="true" id="brick-mortar" class="custom-control-input">
        <label class="custom-control-label" for="brick-mortar">Check if the restaurant is a Brick and Mortar</label>
      </div>

      
      <div class="custom-control custom-radio">
        <input type="radio" name="a" id="trailer" value="true" class="custom-control-input">
        <label for="trailer" class="custom-control-label">Check if the restaurant is a Food Truck</label>
      </div>

      <div class="custom-control custom-radio">
        <input type="checkbox" name="delivery" id="delivery" value="delivery" class="custom-control-input">
        <label for="delivery" class="custom-control-label">Check if the restaurant offers delivery</label>
      </div>

      <div class="custom-control custom-radio">
        <input type="checkbox" name="takeout-curbside" id="takeout-curbside" value="takeout-curbside" class="custom-control-input">
        <label for="takeout-curbside" class="custom-control-label">Check if the restaurant offers curbside takeout</label>
      </div>

      <div class="custom-control custom-radio">
        <input type="checkbox" name="reservations" id="reservations" value="reservations" class="custom-control-input">
        <label for="reservations" class="custom-control-label">Check if the restaurant takes reservations</label>
      </div>

      <div class="custom-control custom-radio mb-4">
        <input type="checkbox" name="on-site-parking" id="on-site-parking" value="on-site-parking" class="custom-control-input">
        <label for="on-site-parking" class="custom-control-label">Check if the restaurant has on-site parking</label>
      </div>

    <button type="submit" class="btn btn-outline-dark" id="create-btn">Create</button>
  </form>
</section>
    <h2 class="mb-4">Approved Restaurants</h2>

    {{!-- {{#if restaurants.length}} --}}
  
    {{#each restaurants as |restaurant|}}
        <div class="container">
        <a href="/dashboard/edit/{{restaurant.id}}" class="card-link" style="font-weight: bolder;">~ Edit restaurant ~</a>
        {{> restaurant-info restaurant}}
        
        </div>
    {{/each}}
 
    {{!-- {{/if}} --}}
</section>

<script src="/javascript/add-restaurant.js"></script>
